#include<bits/stdc++.h>
using namespace std;

class Time{
	public:
		int hour;
		int min;
	
	Time(int m){
		hour= m/60;
		min =m%60;
	}
	
	void display()
	{
		cout<<"The time is : --- "<<hour<<" hours and "<<min<<" mins"<<endl;
	}
};

int main()
{	
	int min_from_mid_night = 330;
	
	Time t(450);
	
	
   Time	t1 = min_from_mid_night;
	
	t.display();
	
	t1.display();
}
